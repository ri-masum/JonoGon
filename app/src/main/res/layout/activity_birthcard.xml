<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".birthcard"
    android:background="@drawable/bg4"
    android:padding="6dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="People's Republic of Bangladesh"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office of the Registrar of Birth and Death"
            android:textColor="@color/black"
            android:textSize="18dp"
            />



        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Registration Certificate"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"

        >

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register No :"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/registerno"
            android:text="  1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:textSize="18dp"
            android:inputType="number"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Registration:"
            android:textSize="18dp"
            android:textStyle="bold"

            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/dateofreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BR Number:"
            android:textSize="18dp"
            android:textStyle="bold"

            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/brnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/black"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/birthname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth:"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/birthdob"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex :"
            android:textSize="18dp"
            android:textColor="@color/black"

            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place of Birth:"
            android:textStyle="bold"

            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/placeofbirth"
            android:layout_width="156dp"
            android:layout_height="wrap_content"

            android:textColor="@color/black"

            android:textSize="18dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parmanent Address :"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/parmanentaddress"
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:textColor="@color/black"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father's Name:"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/fathername"
            android:layout_width="140dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father's NID:"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/fathernid"
            android:layout_width="76dp"
            android:textSize="18dp"

            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nationality:"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/fnationality"
            android:textColor="@color/black"
            android:textSize="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father's BRN:"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/fbirthid"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"

            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's Name:"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/mothersname"
            android:textSize="18dp"

            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's NID:"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/mothernid"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:textSize="18dp"

            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nationality:"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"


            />
        <TextView
            android:id="@+id/mnationality"
            android:textSize="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's BRN:"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/mbirthid"
            android:layout_width="120dp"
            android:layout_marginTop="8dp"
            android:textSize="18dp"

            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Authorised Person - Seal and Signature)"
            android:textSize="12dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Signature and Name of Registrar with Seal)"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/circel_style_yellow"
            android:id="@+id/entername"
            android:hint="name"
            android:textAlignment="center"
            android:textColor="@color/black"


            />
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/print2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="print"
            android:background="@drawable/box_style"

   />



    </LinearLayout>


</LinearLayout>



