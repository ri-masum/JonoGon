<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/headder">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations"
            android:textStyle="bold"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Present Address"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="District*"
            android:layout_marginLeft="75dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15dp"
            />
        <TextView
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upazila*"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15dp"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/present_district"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:background="@drawable/circel_style_color"
            android:autofillHints="District*"

            />

        <Spinner
            android:id="@+id/present_upazila"
            android:layout_width="175dp"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp"
            android:background="@drawable/circel_style_color"
            android:autofillHints="District*"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/present_home"
            android:layout_width="180dp"
            android:layout_height="50dp"

            android:baselineAligned="false"
            android:hint="Home/Holding"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"

            android:background="@drawable/circel_style"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#613636"

            android:textColorHint="@color/black" />




        <EditText
            android:id="@+id/present_village"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:baselineAligned="false"
            android:hint="Village/area/Town"
            android:background="@drawable/circel_style"
            android:inputType="text"
            android:padding="7dp"
            android:textAlignment="center"
            android:textColor="#613636"

            android:textColorHint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/present_postoffice"
            android:layout_width="180dp"
            android:layout_height="50dp"

            android:baselineAligned="false"
            android:hint="Post Office"
            android:background="@drawable/circel_style"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"

            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#613636"

            android:textColorHint="@color/black" />




        <EditText
            android:id="@+id/present_postalcode"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:baselineAligned="false"
            android:hint="Postal Code"
            android:inputType="number"
            android:background="@drawable/circel_style"

            android:padding="7dp"
            android:textAlignment="center"
            android:textColor="#613636"

            android:textColorHint="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Baby_name"
            android:layout_width="180dp"
            android:layout_height="50dp"

            android:baselineAligned="false"
            android:hint="Full_Name"
            android:background="@drawable/circel_style_yellow"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"

            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#613636"

            android:textColorHint="@color/black" />




        <TextView
            android:id="@+id/dob"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:hint="Date_Of_Birth"
            android:textSize="18dp"
            android:inputType="none"


            android:background="@drawable/circel_style_yellow"

            android:padding="7dp"
            android:textAlignment="center"
            android:textColor="#613636"

            android:textColorHint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ward no*"
            android:layout_marginLeft="75dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15dp"
            />
        <TextView
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Union*"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15dp"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/present_ward_no"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:background="@drawable/circel_style_color"
            android:autofillHints="District*"

            />

        <Spinner
            android:id="@+id/present_union"
            android:layout_width="175dp"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp"
            android:background="@drawable/circel_style_color"
            android:autofillHints="District*"

            />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender*"
        android:textStyle="italic"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/gender"
        android:layout_width="175dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/circel_style_color"
        android:autofillHints="District*"

        />



    <Button
        android:id="@+id/present_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#43AAD8"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:background="@drawable/box"
        android:textAlignment="center"
        android:layout_gravity="center"/>
</LinearLayout>